<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_graph"
        app:startDestination="@id/splashScreenActivity">

    <activity
            android:id="@+id/splashScreenActivity"
            android:name="com.example.nac1.View.SplashScreenActivity"
            android:label="activity_splash_screen"
            tools:layout="@layout/activity_splash_screen" >
        <action
                android:id="@+id/action_splashScreenActivity_to_homeActivity"
                app:destination="@id/homeActivity" />
    </activity>
    <activity
            android:id="@+id/homeActivity"
            android:name="com.example.nac1.View.HomeActivity"
            android:label="activity_home"
            tools:layout="@layout/activity_home" >
        <action
                android:id="@+id/action_homeActivity_to_mainActivity"
                app:destination="@id/mainActivity" />
    </activity>
    <activity
            android:id="@+id/mainActivity"
            android:name="com.example.nac1.View.MainActivity"
            android:label="activity_main"
            tools:layout="@layout/activity_main" />
</navigation>